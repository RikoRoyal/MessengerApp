<div class="container-fluid">
    <div class="row">
        <div class="col-3 border-right">
            <div class="p-3">
                <h4>Chats</h4>
                <input type="text" id="searchUser" class="form-control" placeholder="Search user by username" />
                <button id="searchButton" class="btn btn-primary mt-2">Search</button>
                <ul id="searchResults" class="list-group mt-3">
                </ul>
                <ul id="chatList" class="list-group mt-3">
                    @foreach (var chat in Model)
                    {
                        <li class="list-group-item" data-chat-id="@chat.Id">@chat.Name</li>
                    }
                </ul>
            </div>
        </div>
        <div class="col-9">
            <div class="chat-window">
                <ul id="messagesList" class="list-group">
                </ul>
                <div class="form-group mt-3">
                    <input id="userInput" type="hidden" value="@User.Identity.Name" />
                    <input id="recipientInput" type="hidden" /> 
                </div>
                <div class="form-group">
                    <input id="messageInput" type="text" class="form-control" placeholder="Message" />
                </div>
                <button id="sendButton" class="btn btn-primary">Send</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/3.1.11/signalr.min.js"></script>
    <script src="~/js/chat.js"></script>
}
